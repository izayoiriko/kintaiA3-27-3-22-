<% provide(:title, 'All Users') %>
<% provide(:class_text, 'user--edit') %>
<% provide(:button_text, "編集する") %>

  

<div class="row container">
  <div class="col-md-4 col-md-offset-1">
  <%= form_tag import_users_path, multipart: true do %>
    <%= file_field_tag :file, class: "form-csv-control" %>
    <%= submit_tag "CSVをインポート", id: "file-input", class: "btn btn-primary" %>
  <% end %>
  </div>
</div>

<div class="col-md-10 col-md-offset-1">

  <p>Example</p>
    <% @users.each do |user| %>
      <tr>
        <tb><%= user.name unless user.admin? %></tb>
      </tr>
        
      <tr>
        
        <% if current_user.admin? && !current_user?(user) %>
          <ul class="acordion">|
            <%= link_to "削除", user, method: :delete,
                data: { confirm: "削除してもよろしいですか？"}, class: "btn btn-primary" %>
          </ul>
            

          
          <div class="panel-group">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="panel-title">
                  <a data-toggle="collapse" href="#collapse<%= user.id %>">
                    <button type="submit" class="btn btn-primary">編集</button>
                  </a>
                </h4>
              </div>
              <div id="collapse<%= user.id %>" class="panel-collapse collapse">
                <ul class="lost-group">
                  <%= form_with(model: @user, url: user_path(user), method: :put, local: true) do |f| %>
                    <%= render 'shared/error_messages', object: @users %>
                    
                    <%=f.label :name, class: "label-#{yield(:class_text)}" %>
                    <%=f.text_field :name, class: "form-control" %>
                    
                    <%=f.label :email, class: "label-#{yield(:class_text)}" %>
                    <%=f.email_field :email, class: "form-control" %>
                    
                    <%=f.label :affiliation, class: "label-#{yield(:class_text)}" %>
                    <%=f.text_field :affiliation, class: "form-control" %>
                    
                    <%=f.label :employees_number, class: "label-#{yield(:class_text)}" %>
                    <%=f.text_field :employees_number, class: "form-control" %>
                    
                    <%=f.label :public_uid, class: "label-#{yield(:class_text)}" %>
                    <%=f.text_field :public_uid, class: "form-control" %>
                    
                    <%=f.label :password, class: "label-#{yield(:class_text)}" %>
                    <%=f.password_field :password, class: "form-control" %>
                    
                    <%=f.label :basic_work_time, class: "label-#{yield(:class_text)}" %>
                    <%=f.time_field :basic_work_time, class: "form-control" %>
                    
                    <%=f.label :designated_work_start_time, class: "label-#{yield(:class_text)}" %>
                    <%=f.time_field :designated_work_start_time, class: "form-control" %>
                    
                    <%=f.label :designated_work_end_time, class: "label-#{yield(:class_text)}" %>
                    <%=f.time_field :designated_work_end_time, class: "form-control" %>
                    
                    <%=f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
                  <% end %>

                </ul>
              </div>
            </div>
          </div>
        </td>
      
      </tr>  
    <% end %>
  <thead>
  </thead>

  <tbody>

    <% end %>
  </tbody>
</table>
  
</div>

<!--モーダルウインドウ-->
<div id="edit-basic-info" class="modal fade" tabindex="-1" role="dialog" area-hidden="true"></div>
