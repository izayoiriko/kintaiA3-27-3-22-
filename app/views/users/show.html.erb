<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td>
        <%= link_to "←", user_path(date: @first_day.prev_month), class: "btn btn-default" %>
        【<%= l(@first_day, format: :middle) %>】時間管理表
        <%= link_to "→", user_path(date: @first_day.next_month), class: "btn btn-default" %>
      </td>
      <td>指定勤務時間: <%= format_basic_info(@user.work_time) %></td>
      <td colspan="3">基本時間: <%= format_basic_info(@user.basic_time) %></td>
      <td>月初日: <%= l(@first_day, format: :short) %></td>
    </tr>
    
    <tr>
      <td>所属: <%= @user.department.present? ? @user.department : "未所属" %></td>
      <td>名前: <%= @user.name %></td>
      <td>コード</td>
      <td></td>
      <td>出勤日数：<%= @worked_sum %></td>
      <td>月末日:<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<div class="btn-users-show">
  <%= link_to "1か月の勤怠編集へ", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-success" %>
</div>
    
<div>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <th rowspan="2">日付</th>
        <th rowspan="2">曜日</th>
        <th colspan="3">出社</th>
        <th colspan="3">退社</th>
        <th rowspan="2">在社時間</th>
        <th rowspan="2">備考</th>
      </tr>
      <tr>
        <td>時</td>
        <td>分</td>
        <td></td>
        <td>時</td>
        <td>分</td>
        <td></td>
      </tr>
    </thead>
    <tbody>
      <% @attendances.each do |day| %>
        <tr>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td class = "<%= "sat" if day.worked_on.saturday? %>
                       <%= "sun" if day.worked_on.sunday? %>">
            <%= $days_of_the_week[day.worked_on.wday] %>
            <!--曜日終わり-->
          </td>
          <td><%= l(day.started_at.floor_to(15.minutes), format: :time) if day.started_at.present? %></td>
          <td></td>
          <td>
            
              <% if btn_text = attendance_state(day) %>
                <%= link_to "出勤登録", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendances" %>
              <% end %>
            
          </td>
          <td></td>
          <td><%= l(day.finished_at.floor_to(15.minutes), format: :time) if day.finished_at.present? %></td>
          <td>
            
              <% if btn_text = attendance_state(day) %>
                <%= link_to "退勤登録", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendances" %>
              <% end %>
            
          </td>
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
              <%= str_times = working_times(day.started_at.floor_to(15.minutes), day.finished_at.floor_to(15.minutes)) %>
              <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
            <% end %>
          </td>
          <td><%= day.note %></td>
        </tr>
      <% end %>
    </tbody>
    
    <tfoot>
      <!--rowspan:縦結合、 colspan:横結合-->
      <tr>
        <td colspan="2">累計日数</td>
        <td colspan="2">総合勤務時間</td>
        <td colspan="2">累計在社時間</td>
        <td rowspan="2"></td>
      </tr>
      <tr>
        <td colspan="2"><%= @attendances.count %></td>
        <td colspan="2"><%= format_basic_info(@user.work_time).to_f * @worked_sum %></td>
        <td colspan="2"><%= format("%.2f", @total_working_times.to_f) %></td>
      </tr>
    </tfoot>
  </table>
</div>