<% provide(:title, 'EditBase') %>
<% provide(:class_text, 'base--edit') %>
<% provide(:button_text, "拠点修正") %>

<h1>拠点情報修正</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3" >
    <%= form_with(model: @base, local: true) do |b| %>
    
      <%=b.label :base_name, class: "label-#{yield(:class_text)}" %>
      <%=b.text_field :base_name, class: "form-control" %>
      
      <%=b.label :base_number, class: "label-#{yield(:class_text)}" %>
      <%=b.text_field :base_number, class: "form-control" %>
      
      <%=b.label :base_kind, class: "label-#{yield(:class_text)}" %>
      <%=b.text_field :base_kind, class: "form-control" %>
      
      <%=b.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
    <% end %>
  </div>
</div>


