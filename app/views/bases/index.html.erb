<% provide(:title, "拠点一覧")%>

<h1>拠点一覧</h1>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td></td>
      <td></td>
      <td><%= :base_name %></td> 
      <td>拠点名</td>
      <td>勤怠種類</td>
    </tr>
    <% @bases.each do |base|%>
      <tr>
        <td><%= link_to "修正", edit_basis_path(base), class: "btn btn-default btn-primary" %></td>
        <td><%= link_to "削除", '#', class: "btn btn-default btn-primary" %></td>
        <td><%= base.base_name %></td>
        <td><%= base.base_number %></td>
        <td><%= base.base_kind %></td>
      </tr>
    <% end %>
  </table>
  <div class="base-table">
    <%= link_to "拠点情報追加", new_basis_path, class: "btn btn-default btn-primary" %>
  </div>
</div>